.infinite-scroll {
  overflow: auto;
  max-height: 300px;
  border: 1px solid #a8bccf;
}
.listsemployee-landing {
  .scrollable-list {
    height: auto;
    max-height: 180px;
    overflow-x: hidden;
  }
  .scrollable-list::-webkit-scrollbar {
    -webkit-appearance: none;
    width: 4px;
  }
  .scrollable-list::-webkit-scrollbar-thumb {
    border-radius: 3px;
    background-color: lightgray;
    -webkit-box-shadow: 0 0 1px rgba(255, 255, 255, .75);
  }
  .table-header {
    text-align: center;
  }
  .padding-10 {
    padding: 10px;
  }
  .padding-0 {
    padding: 0;
  }
  .margin-0 {
    margin: 0;
  }
  .duplicates {
    font-size: 10pt;
    overflow: auto;
    max-height: 300px;
    margin-left: 10px;
    border: 1px solid #a8bccf;
    .bundle {
      padding-top: 10px;
      padding-bottom: 10px;
    }
    .title {
      font-weight: bold;
    }
    .records {
      padding-bottom: 2px;
    }
  }
  .compact {
    td {
      padding: 1px;
      .form-group {
        margin-left: 0;
        margin-right: 0;
        margin-bottom: 0;
      }
    }
  }
}
