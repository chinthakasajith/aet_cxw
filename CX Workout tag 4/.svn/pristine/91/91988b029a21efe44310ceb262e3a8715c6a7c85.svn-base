<div class="modal-header">
  <h3 class="modal-title">Add New Chanel</h3>
</div>
<div class="modal-body">
  <form class="form-horizontal" name="newChannelForm" novalidate>
    <div class="form-group has-feedback" ng-class="{'has-error' : newChannelForm.newChannel.$showError && newChannelForm.newChannel.$hasError()}">
      <label class="col-sm-3 control-label" for="newChannelForm">Channel Name :</label>
      <div class="col-sm-9">
        <input  aria-describedby="inputSuccess2Status" class="form-control" id="newChannel" name="newChannel" ng-maxlength="25" ng-model="newChanel" placeholder="Enter new channel ..." required type="text"/>
        <div class="error" ng-show="newChannelForm.newChannel.$showError">
          <span aria-hidden="true" class="glyphicon form-control-feedback" ng-class="{'glyphicon-remove' : newChannelForm.newChannel.$showError && newChannelForm.newChannel.$hasError()}"></span>
          <p class="text-danger" ng-show="newChannelForm.newChannel.$error.required">Channel title required</p>
          <p class="text-danger" ng-show="newChannelForm.newChannel.$error.maxlength">Channel title must be 25 characters or less</p>
        </div>
      </div>
    </div>
  </form>
</div>
<div class="modal-footer">
  <button class="btn btn-primary" ng-click="add()" ng-disabled="newChannelForm.$invalid" type="button">OK</button>
  <button class="btn btn-warning" ng-click="cancel()" type="button">Cancel</button>
</div>
