<h1 class="page-header">
    Edit Role
</h1>

<div class="row">
    <div class=" col-md-6">
        <form name="editRoleForm" novalidate class="form-horizontal">
            <div class="form-group has-feedback required"
                 ng-class="{ 'has-success' : editRoleForm.title.$valid, 'has-error' : editRoleForm.title.$showError && editRoleForm.title.$hasError()}">
                <label for="title" class="col-md-3 control-label">Title</label>

                <div class="col-md-9">
                    <input name="title"
                           id="title"
                           type="text"
                           class="form-control"
                           placeholder="Title..."
                           ng-model="role.title"
                           required
                           ng-maxlength="255"
                           aria-describedby="inputSuccess2Status"/>

                    <div ng-show="editRoleForm.title.$showError" class="error">
                        <span class="glyphicon  form-control-feedback" aria-hidden="true"
                              ng-class="{'glyphicon-ok' : editRoleForm.title.$valid, 'glyphicon-remove' : editRoleForm.title.$showError && editRoleForm.title.$hasError()}"></span>

                        <p class="text-danger" ng-show="editRoleForm.title.$error.required">Title is required</p>

                        <p class="text-danger" ng-show="editRoleForm.title.$error.maxlength">Must be less than 255
                            characters</p>
                    </div>
                </div>
            </div>

            <div class="form-group has-feedback required"
                 ng-class="{ 'has-success' : editRoleForm.description.$valid, 'has-error' : editRoleForm.description.$showError && editRoleForm.description.$hasError()}">
                <label for="description" class="col-md-3 control-label">Description</label>

                <div class="col-md-9">
					<textarea name="description"
                              id="description"
                              class="form-control"
                              placeholder="Enter description here..."
                              ng-model="role.description"
                              required
                              rows="4"
                              ng-maxlength="1000">
					</textarea>

                    <div ng-show="editRoleForm.description.$showError" class="error">
                        <span class="glyphicon  form-control-feedback" aria-hidden="true"
                              ng-class="{'glyphicon-ok' : editRoleForm.description.$valid, 'glyphicon-remove' : editRoleForm.description.$showError && editRoleForm.description.$hasError()}"></span>

                        <p class="text-danger" ng-show="editRoleForm.description.$error.required">Description is
                            required.</p>

                        <p class="text-danger" ng-show="editRoleForm.description.$error.maxlength">Must be less than
                            1000 characters</p>
                    </div>
                </div>
            </div>

            <div class="form-group features">
                <label for="description" class="col-md-3 control-label">Features</label>

                <div class="col-md-3 feature-group">
                    <h4>BusinessUser Tab</h4>

                    <div class="checkbox">
