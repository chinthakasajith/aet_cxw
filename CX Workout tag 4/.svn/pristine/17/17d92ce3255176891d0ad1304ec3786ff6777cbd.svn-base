.hierarchy-map-main-container {
  &.edit{
    .alert{
      &.alert-info{
        h4{
          font-weight: bold;
        }
        p{
          margin-left: 40px;
        }
      }
    }
    width: 100%;
    .labels-container {
      display: flex;
      float: left;
      ul {
        padding: 0;
        margin: 0;
        li {
          list-style: none;
          margin-bottom: @height;
          position: relative;
          width: 180px;
          height: @height + 41;
          cursor: pointer;
          &.stage {
            height: 84px;
            &.edit{
              height: 110px;
            }
          }
          &.edit{
            height: 147px;
          }
        }
      }
    }
    .tree {
      .btn{
        &.add{
          background-color: @blue-color;
          border-color: darken(@blue-color , 10%);
          &:hover{
            background-color: darken(@blue-color , 10%);;
          }
        }
      }
      .root-container {
        .element-container {
          .line-to {
            border-top: 2px solid #8a959f !important;
          }
          .node {
            > .panel {
              .btn{
                font-size: 14px;
                padding: 3px 8px;
                background-color: #8a959f;
                border-color: #8a959f;
                &.add{
                  border-radius: 30px;
                  display: block;
                  position: absolute;
                  right: -15px;
                  z-index: 20;
                  bottom: -15px;
                  i {
                    left: 1px;
                    top: 1px;
                  }
                }
                .glyphicon {
                  font-size: 12px;
                }
              }
              &.panel-primary {
                &.stage{
                  background-color: @white;
                  border-color: darken(@main-color-lighten , 10%);
                  color: #8a959f;
                  .panel-body {
                    p {
                      border: 1px solid #8a959f;
                      color: #8a959f;
                    }
                  }
                }
                background-color: #8a959f;
                color: @white ;
                border: 2px solid @white;
                .panel-body {
                  p {
                    border: 1px solid #DADADA ;
                    color: #DADADA ;
                  }
                }
                .btn{
                  &.edit{
                    background-color: @main-color-lighten;
                    border-color: @main-color;
                    &:hover{
                      background-color: @main-color;
                    }
                  }
                  &.delete{
                    background-color: @red;
                    border-color: darken(@red , 10%);
                    &:hover{
                      background-color : darken(@red , 10%);
                    }
                  }
                  &.add{
                    background-color: @blue-color;
                    border-color: darken(@blue-color , 10%);
                    &:hover{
                      background-color: darken(@blue-color , 10%);;
                    }
                  }
                }
              }
              .panel-body {

              }
              .ctrl-btns {
                position: relative;
                top: 10px;
              }
            }
          }
        }
      }
      .child-container {
        &:before {
          content: '';
          width: (@width / 2) + @padding;
          position: absolute;
          height: @height / 2;
          left: 0;
          top: -@height;
          border-right: 2px solid #8a959f;
          max-width: 100%;
          max-height: 100%;
          display: block;
          z-index: 0;
        }
        .element-container {
          &:before {
            content: "";
            width: (@width / 2) + @padding;
            position: absolute;
            height: @height / 2;
            left: 0;
            top: -(@height / 2);
            border-right: 2px solid #8a959f;
          }
        }
      }
    }
  }

}