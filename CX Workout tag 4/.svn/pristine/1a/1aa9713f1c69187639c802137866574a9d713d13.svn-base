.btn{
  font-size: @default-font-size + 2;
  text-transform: uppercase;
  font-weight: bold;
  &.btn-lg{
    padding: 16px 40px;
  }
  &.btn-primary{
    color: #ffffff;
    background-color: @primary-btn-color;
    border-color: @primary-btn-color;
    border-bottom: 3px solid @primary-btn-border-bottom-color;
    border-radius: 5px;
    &[disabled]{
      background-color: @primary-btn-color;
      &:active, &:focus, &:hover{
        background-color: darken(@primary-btn-color, 5%);
        border-color: @primary-btn-border-bottom-color;
      }
    }
    &:active, &:focus, &:hover{
      background-color: darken(@primary-btn-color, 10%);
      border-color: @primary-btn-border-bottom-color;
    }
  }
  &.btn-primary, &.btn-default, &.btn-success, &.btn-danger, &.btn-info, &.btn-warning {
    background-image: inherit;
    box-shadow: none;
  }
}