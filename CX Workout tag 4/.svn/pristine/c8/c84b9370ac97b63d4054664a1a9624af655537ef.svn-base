@height : 50px;
@width : 160px;
@panelWidth  : @width;
@padding : 15px;

.map {
  display: flex;
  padding-top: 20px;
  height: 130%;
  padding-bottom: 20px;
  //overflow: auto;
  .hierarchy-map-main-container {
    position: relative;
    .labels-container {
      float: left;
      ul {
        padding: 0;
        margin: 0;
        float: left;
        .main-label {
          &:nth-child(3) {
            margin-bottom: 0;
          }
        }
        li {
          list-style: none;
          position: relative;
          cursor: pointer;
          margin-bottom: 50px;
          width: 40px;
          height: @height * 2 + 43;
          &.action{
            position: relative;
            &:after {
              left: 100%;
              top: 45%;
              border: solid transparent;
              content: " ";
              height: 0;
              width: 0;
              position: absolute;
              pointer-events: none;
              border-left-color: @secondary-color;
              border-width: 8px;
            }
          }
          &.has-icons {
            width: 40px;
            height: @height * 2 + 34;
          }
          &.stage {
            height: 84px;
          }
          canvas {
            left: 2px;
            position: absolute;
          }
          &:last-child {
            margin-bottom: 0;
          }
        }
        &.main-labels {
          background-color: @secondary-color;
          float: left;
          li {

          }
        }
        &.channel-labels {
          background-color: @secondary-color-darken;
        }

      }
    }
    .tree {
      position: relative;
      .root-container {
        display: flex;
        .element-container {
          position: relative;
          width: @panelWidth + (@padding * 2);
          height: 127px;
          cursor: pointer;
          &.stage {
            h4 {
              &.stage-title {
                height: 30px !important;
              }
            }
          }
          .node {
            margin: 0 @padding;
            > .panel {
              background-color: #e9ebed;
              color: #8a959f;
              border: 2px solid #e9ebed;
              width: @panelWidth;
              text-align: center;
              margin-right: 20px;
              position: relative;
              &.panel-primary {
                .shadow(0, 0, 35px, 0, rgba(0, 0, 0, 0.3));
                &.stage{
                  background-color: @white;
                  border-color: darken(@main-color-lighten , 10%);
                  color: #3e4852;
                  .panel-body {
                    p {
                      border: 1px solid #8a959f;
                      color: #8a959f;
                    }
                  }
                }
                &.white{
                  color: #3e4852;
                }
                background-color: #8a959f;
                color: @white ;
                border: 2px solid @white;
              }
              .tooltip {
              }
              .panel-body {
                p {
                  margin: 0;
                  text-align: center;
                  position: absolute;
                  right: 5px;
                  top: 5px;
                  min-width: 20px;
                  border-radius: 10px;
                  padding: 0 5px;
                  font-size: 10px;
                  border: 1px solid #aaaaaa;
                  color: #737373;
                  -webkit-box-shadow: 0 0 25px 0 rgba(0, 0, 0, 0.2);
                  -moz-box-shadow: 0 0 25px 0 rgba(0, 0, 0, 0.2);
                  box-shadow: 0 0 25px 0 rgba(0, 0, 0, 0.2);
                }
                h4 {
                  margin: 15px 0 5px;
                  font-size: 12px;
                  height: @height + 15;
                  overflow: hidden;
                  word-wrap: break-word;
                }
              }
            }
          }
        }
      }
      .child-container {
        display: flex;
        position: relative;
        margin-top: @height;
        > .vertical-line {
          width: (@width / 2) + @padding;
          position: absolute;
          height: @height / 2;
          left: 0;
          top: -@height;
          border-right: 2px solid #8a959f;
          max-width: 100%;
          max-height: 100%;
          display: block;
          z-index: 0;
        }
        .element-container {
          cursor: pointer;
          > .vertical-line {
            width: (@width / 2) + @padding;
            position: absolute;
            height: @height / 2;
            left: 0;
            top: -(@height / 2);
            border-right: 2px solid #8a959f;
          }
          .line-to {
            position: absolute;
            top: -(@height / 2);
            border-top: 2px solid #8a959f;
            width: 100%;
            left: 50%;
            display: block;
          }
          &.ui-sortable-helper {
            > .line-to {
              display: none !important;
            }
            &:before {
              display: none !important;
            }
          }
          &:last-of-type {
            & > .line-to {
              display: none;
            }
          }
        }
      }
      .placeholder {
        .node {
          background-color: #ffffff;
          border: 1px solid #dddddd;
          border-radius: 4px;
          height: 138px;
          width: 160px;
        }
      }
      .map-label {
        //position: absolute;
        display: none;
      }
      ul {
        padding: 0;
        margin: 0;
        li {
          list-style: none;
          float: left;
          margin: 0;
        }
      }
    }
  }
}

